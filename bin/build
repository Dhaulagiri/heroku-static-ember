#!/usr/bin/env bash

if [ "$NODE_ENV" = "production" ]
then
  echo "-----> Building production assets, don't set NODE_ENV=production if you want to skip build"
  echo "-----> Running Ember CLI Build"
  # Skip dependency checking because it'll fail when devDeps are missing.
  SKIP_DEPENDENCY_CHECKER=true ./node_modules/.bin/ember build --environment=production

else
  echo "-----> Skipping Ember CLI Build, set NODE_ENV=production to build"
fi 
